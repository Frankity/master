#!/usr/bin/env sh

COMMAND='yamllint'

echo "+++ Installing dependencies +++"
if ! $(which ${COMMAND}); then
  pip install --upgrade pip > /dev/null
  pip install ${COMMAND} > /dev/null
fi

echo "+++ Running YAML linter +++"
for file in $(find -type f -name '*.yml' | awk '!/docker/ && !/sample/'); do
    ${COMMAND} $file;
done
