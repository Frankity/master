#!/usr/bin/env bash

cd $(dirname $0)/..

CODE="/code"
LINTER=${1:-'python'}

docker run -it \
           --rm \
           --mount type=volume,source=pip-cache,target=/root/.cache/pip \
           --mount type=bind,source="$(pwd)"/,target=${CODE} \
           -w ${CODE} \
           python:3 \
           ${CODE}/scripts/lint_${LINTER} ${CODE}
